<div clarr="container">
  <h1><%= @topic.name %></h1>
  <p class="lead"><%= @topic.description %></p>

  <div>
    <% if user_is_authorized_to_edit_topics? %>
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success btn-sm' %>
    <% end %>
    <% if user_is_authorized_to_delete_topics? %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this topic and all of its related posts?' } %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-8">
        <%= render @topic.posts %>
        <%= render @topic.sponsored_posts %>
    </div>
    <% if current_user %>
    <div class="col-md-4">
      <%= link_to "New Sponsored Post", new_topic_sponsored_post_path(@topic), class: 'btn btn-success' %>
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
